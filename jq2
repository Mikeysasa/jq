/* 搜索栏样式 */
.search-section {
	background-color: #333;
	padding: 10px 0;
}
.search-section form {
	display: flex;
	align-items: center;
}
.search-section input {
	flex-grow: 1;
	margin-right: 20px;
}
.search-section .btn {
	margin-left: 10px;
}


/* 轮播图样式 */
.carousel {
  width: 1300px; /* 设置轮播图宽度 */
  height: 520px; /* 设置轮播图高度 */
  margin: 0 auto; /* 水平居中 */
  overflow: hidden; /* 隐藏超出部分 */
}

.carousel .item img {
  max-width: 100%; /* 图片最大宽度为轮播图宽度 */
  max-height: 100%; /* 图片最大高度为轮播图高度 */
  margin: 0 auto; /* 水平居中 */
  display: block; /* 块级元素 */
}


/* 热门推荐样式 */
.recommend-section {
	margin-top: 30px;
}
.section-title {
	margin-bottom: 20px;
}
