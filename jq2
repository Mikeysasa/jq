	<script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://cdn.bootcss.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
	<script>
		$('.recommend-section .col-md-3').hover(function(){
		    $(this).find('.mask').stop().fadeIn();
		    $(this).find('.play-btn').stop().fadeIn();
		    $(this).find('img').stop().animate({width: '110%', height: '110%'}, 200);
		}, function(){
		    $(this).find('.mask').stop().fadeOut();
		    $(this).find('.play-btn').stop().fadeOut();
		    $(this).find('img').stop().animate({width: '100%', height: '100%'}, 200);
		});
		$('a').click(function() {
		  window.location.href = 'https://www.wujicloud.cn/vodplay/3648-1-1.html';
		})
		$('b').click(function() {
		  window.location.href = 'https://www.bilibili.com/video/BV1WW41187VR/';
		})
		$('c').click(function() {
		  window.location.href = 'https://www.bilibili.com/video/av17955293/';
		})
		$('#watch-now').click(function() {
		  window.location.href = 'https://v.qq.com/x/cover/mzc00200br3t1zr/h0044rruc7z.html';
		})
		$('.search-section .btn').click(function() {
			var keyword = $('.search-section input').val();
			alert('您搜索的关键字是：' + keyword);
		});
		$('.carousel').carousel({
			interval: 2000
		});
		$(function(){
		    // 滚动事件
		    $(window).scroll(function(){
		        if ($(this).scrollTop() > 200) { // 当页面滚动超过200px时，显示返回顶部按钮
		            $('.back-to-top').fadeIn();
		        } else {
		            $('.back-to-top').fadeOut();
		        }
		    });
		
		    // 点击事件
		    $('.back-to-top').click(function(){
		        $('html, body').animate({scrollTop: 0}, 800); // 滚动到页面顶部
		        return false; // 防止默认跳转
		    });
		});

	</script>
